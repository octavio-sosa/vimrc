syntax on

call plug#begin('~/.vim/plugged')
Plug 'sonph/onehalf', {'rtp': 'vim'}
call plug#end()

"colorscheme onehalflight

set number
set ruler
set visualbell

set wrap
set textwidth=79
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set backspace=indent,eol,start

set mouse=a
nnoremap <silent> <2-LeftMouse> :let @/='\V\<'.escape(expand('<cword>'), '\').'\>'<cr>:set hls<cr>
set clipboard+=unnamed
set paste
set go+=a

set listchars=tab:\|\ 
set list
